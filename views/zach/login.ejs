<body>
    <form action="/zach/login" method="POST">
    <div class="item">
        <p>Username:</p>
        <div class="name-item">
          <input type="text" name="username" placeholder="password"/>
        </div>
      </div>
      <div class="item">
        <p>Password:</p>
        <div class="name-item">
          <input type="text" name="password" placeholder="password"/>
        </div>
      </div>
      <div class="btn-block">
        <button type="submit">Login</button>
      </div>
    </form>
    <script src="/app.js"></script>
</body>
